{
  "compilerOptions": {
    "module": "ESNext",
    "skipLibCheck": true,
    "target": "ES2020",
    "useDefineForClassFields": true,

    /* Bundling */
    "allowImportingTsExtensions": true,
    "isolatedModules": false,
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "sourceMap": true,

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.js"],
  "exclude": ["dist", "node_modules"]
}
